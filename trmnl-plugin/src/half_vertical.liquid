{% if has_image %}
<div class="view view--half_vertical" style="display: flex; align-items: center; justify-content: center; background: #000;">
  <img src="{{ image_url }}" alt="PromptInk Generated Image" style="max-width: 100%; max-height: 100%; width: auto; height: auto; object-fit: contain;" />
</div>
{% else %}
<div class="view view--half_vertical layout layout--col gap--space-between">
  <div class="content content--center">
    <div class="title title--medium">PromptInk</div>
    <div class="label label--small">No image synced</div>
  </div>
</div>
{% endif %}
